@model TaskNote.ViewModel.CURD.TaskModelVMs.TaskModelVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:textbox field="Entity.TaskName" />
<wt:textbox field="Entity.TaskDescription" />
<wt:datetime field="Entity.StartTime" />
<wt:datetime field="Entity.EndTime" />
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
