@model TaskNote.ViewModel.CURD.TaskGroupModelVMs.TaskGroupModelVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
	<wt:quote>@Localizer["Sys.DeleteConfirm"]</wt:quote>
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:display field="Entity.GroupName" />
<wt:display field="Entity.GroupBackgroundColor" />
<wt:display field="Entity.IsFinishedTag" />
<wt:display field="Entity.taskGroupType" />
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="@Localizer["Sys.Delete"]"/>
        <wt:closebutton />
    </wt:row>
</wt:form>
