@model TaskNote.ViewModel.CURD.TaskDtlModelVMs.TaskDtlModelVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
	<wt:quote>@Localizer["Sys.DeleteConfirm"]</wt:quote>
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:display field="Entity.task.TaskName" />
<wt:display field="Entity.taskGroup" />
<wt:display field="Entity.TaskContext" />
<wt:display field="Entity.IsFinished" />
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="@Localizer["Sys.Delete"]"/>
        <wt:closebutton />
    </wt:row>
</wt:form>
