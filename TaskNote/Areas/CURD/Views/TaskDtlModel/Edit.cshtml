@model TaskNote.ViewModel.CURD.TaskDtlModelVMs.TaskDtlModelVM
@inject IStringLocalizer<Program> Localizer;

<wt:form vm="@Model">
<wt:row items-per-row="ItemsPerRowEnum.Two">
<wt:combobox field="Entity.taskId" items="Alltasks"/>
<wt:combobox field="Entity.taskGroupId" items="AlltaskGroups"/>
<wt:textbox field="Entity.TaskContext" />
<wt:switch field="Entity.IsFinished" />
<wt:upload field="Entity.AttachmentId" />
</wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton />
        <wt:closebutton />
    </wt:row>
</wt:form>
